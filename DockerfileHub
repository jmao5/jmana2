# syntax = docker/dockerfile:1

# Adjust NODE_VERSION as desired
ARG NODE_VERSION=21.6.2
FROM node:${NODE_VERSION}-slim as base

LABEL fly_launch_runtime="Next.js"

# Next.js app lives here
WORKDIR /app

# Set production environment
ENV NODE_ENV="production"

# Set environment variables
ARG NEXT_PUBLIC_FE_URL
ARG NEXT_PUBLIC_KAKAO_OAUTH_URL
ARG NEXT_PUBLIC_API_BASE_URL
ENV NEXT_PUBLIC_FE_URL=$NEXT_PUBLIC_FE_URL
ENV NEXT_PUBLIC_KAKAO_OAUTH_URL=$NEXT_PUBLIC_KAKAO_OAUTH_URL
ENV NEXT_PUBLIC_API_BASE_URL=$NEXT_PUBLIC_API_BASE_URL

# Copy application code
COPY . .

# Install dependencies
RUN npm install

# Final stage for app image
FROM base

# Copy built application
COPY --from=base /app /app

# Start the server by default, this can be overwritten at runtime
EXPOSE 3000
CMD echo "NEXT_PUBLIC_FE_URL: $NEXT_PUBLIC_FE_URL" && \
    echo "NEXT_PUBLIC_KAKAO_OAUTH_URL: $NEXT_PUBLIC_KAKAO_OAUTH_URL" && \
    echo "NEXT_PUBLIC_API_BASE_URL: $NEXT_PUBLIC_API_BASE_URL" && \
    npm run start